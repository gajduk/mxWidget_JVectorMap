<?xml version="1.0" encoding="utf-8" ?>
<widget id="jVectorMapWidget.widget.jVectorMapWidget" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>jVectorMapWidget</name>
    <description>A wrapper for the JVectorMap javascript library.</description>

    <icon />

    <properties>
       <property key="mapSeriesEntity" type="entity" required="false" allowNonPersistableEntities="true">
            <caption>Map Data Series</caption>
            <category>Data Source</category>
            <description>Container entity, referencing MapDataPoint objects.</description>
        </property>
        <property key="mapDataPoints" type="entity" required="false" isPath="yes" pathType="reference" allowNonPersistableEntities="true">
            <caption>Map Data Points Association</caption>
            <category>Data source</category>
            <description>Select a one on one relation from the main entity to the entity that is the starting point of your chainable widgets.</description>
        </property>
        <property key="messageString" type="string" required="true" defaultValue="">
            <caption>Message</caption>
            <category>Appearance</category>
            <description>The message visible within the widget.</description>
        </property>
    </properties>
</widget>
